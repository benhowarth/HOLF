<?xml version='1.0' encoding='utf-8'?>
<widget id="xyz.benhowarth.holf" version="0.0.2" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>HOLF</name>
    <description>
        Hedgehog Golf!
    </description>
    <author email="tophatsquidlol@gmail.com" href="http://tophatsquid.itch.io">
        TopHatSquid
    </author>
		<icon src="res/icon_512.png" />
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
